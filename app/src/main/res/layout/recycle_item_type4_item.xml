<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/material_white"
    android:padding="@dimen/dp_10">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.aidingyun.ynlive.mvp.ui.widget.CircleImageView
            android:id="@+id/circle_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pic5" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="张老师"
                android:textColor="@color/colorTitleTextview"
                android:textSize="@dimen/sp_16"
                android:id="@+id/tv_lable" />
            <TextView
                android:id="@+id/tv_technical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@+id/tv_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="浙江大学计算机学院教授"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorcontentTextview"/>
            <RelativeLayout
                android:layout_below="@+id/tv_technical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorcontentTextview"
                        android:textSize="@dimen/sp_12"
                        tools:text="0门课程"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#A4B6CC"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:id="@+id/tv_collent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="@color/colorcontentTextview"
                        android:textSize="@dimen/sp_12"
                        tools:text="1000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorcontentTextview"
                        android:textSize="@dimen/sp_12"
                        android:text="人收藏"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="500"
                        android:textSize="20sp"
                        android:textColor="@color/text_sticker_blue_easy_photos"
                        />
                    <TextView
                        android:id="@+id/tv_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_sticker_blue_easy_photos"
                        android:textSize="@dimen/sp_12"
                        android:text="金币/小时"/>
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="推荐学习："
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorcontentTextview"/>
        <TextView
            android:id="@+id/tv_recommend_learning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="快速提高个人情商"
            android:textColor="@color/colorPrompt2"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/material_black"/>
</LinearLayout>
