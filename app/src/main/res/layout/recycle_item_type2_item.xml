<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="164dp"
            android:adjustViewBounds="true"
            android:layout_height="104dp"
            android:src="@mipmap/young"
            android:scaleType="centerCrop"
            android:id="@+id/iv_head" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="AE影视后期片头动画"
                android:textColor="@color/colorTitleTextview"
                android:textSize="@dimen/sp_16"
                android:id="@+id/tv_title" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorcontentTextview"
                    android:drawableLeft="@drawable/stars_selected"
                    tools:text="4.9分"/>
                <TextView
                    android:id="@+id/tv_collent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/colorcontentTextview"
                    tools:text="0人收藏"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="20sp"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    />
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    android:text="金币"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
