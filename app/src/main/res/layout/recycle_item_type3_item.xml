<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="95dp"
    android:orientation="vertical"
    android:layout_margin="@dimen/dp_10">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="164dp"
            android:layout_height="95dp">
            <ImageView
                android:layout_width="164dp"
                android:adjustViewBounds="true"
                android:layout_height="95dp"
                android:src="@mipmap/young"
                android:scaleType="centerCrop"
                android:id="@+id/item_recyc_type3_item_img" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直播中"
                android:textColor="@color/material_white"
                android:background="@drawable/red_r4"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:textSize="10sp"
                />
        </com.zhy.autolayout.AutoRelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AE影视后期片头动画"
                android:textColor="@color/colorTitleTextview"
                android:textSize="@dimen/sp_16"
                android:id="@+id/tv_lable" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lable"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/stars_selected"
                    android:text="4.9分"/>
                <TextView
                    android:id="@+id/tv_collent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="5245"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人收藏"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="20sp"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    />
                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_sticker_blue_easy_photos"
                    android:text="金币"/>
            </LinearLayout>

        </RelativeLayout>



    </LinearLayout>

</RelativeLayout>
